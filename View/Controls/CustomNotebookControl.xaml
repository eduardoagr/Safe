<UserControl x:Class="Safe.View.Controls.CustomNotebookControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Safe.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="{Binding Name}"
                   FontWeight="Bold"
                   Margin="5"
                   FontSize="14"
                   Foreground="White"
                   FontStyle="Italic"/>
        <TextBlock Text="{Binding CreatedAt, StringFormat='Created on: {0}'}"
                   FontWeight="Bold"
                   Margin="5"
                   FontSize="10"
                   Foreground="White"
                   FontStyle="Italic"/>
    </StackPanel>
</UserControl>
